<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExemploHttp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExemploHttp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ExemploHttp">

    <TabBar>
        <Tab
            Title="Posts">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:PostsView}"
            Route="PostsView" />
        </Tab>
        <Tab
            Title="Photos">
            <ShellContent
            Title="Photos"
            ContentTemplate="{DataTemplate local:PhotosView}"
            Route="PhotosView" />
        </Tab>
    </TabBar>
</Shell>
